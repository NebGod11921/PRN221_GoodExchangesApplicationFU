@page
@model MyRazorPage.Pages.Seller.ProductDetailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.requestProduct.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.requestProduct.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.requestProduct.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.requestProduct.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.requestProduct.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.requestProduct.CategoryId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.requestProduct.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.requestProduct.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.requestProduct.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.requestProduct.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.requestProduct.Image)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.requestProduct.Image))
            {
                <img src="~/uploads/@Model.requestProduct.Image" alt="@Model.requestProduct.Title" style="max-width: 100%; height: auto;" />
            }
            else
            {
                <p>No image available</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.requestProduct.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.requestProduct.Quantity)
        </dd>
    </dl>

</div>
<div>
    <a asp-page="./UpdateProduct" asp-route-id="@Model.requestProduct?.Id">Edit</a> |
    <a asp-page="./ProductManagement">Back to List</a>
</div>