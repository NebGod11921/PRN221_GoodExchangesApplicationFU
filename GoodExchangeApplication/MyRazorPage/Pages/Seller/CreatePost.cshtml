@page "/createpost"
@model MyRazorPage.Pages.Seller.CreatePostModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create Post";
    Layout = "_Layout";
}

<h1>Create Post</h1>

<form asp-page-handler="CreatePost" method="post">
    <div class="form-group">
        <label>Title</label>
        <input name="txtTitle" class="form-control"/>
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea name="txtDescription" class="form-control"></textarea>
        
    </div>

    <div class="form-group">
        <label>Product</label>
        <select name="txtSelectProductId" class="form-control">
            <option value="">-- Select Product --</option>
            @foreach (var product in Model.Products)
            {
                <option value="@product.Id">@product.Title</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create Post</button>
</form>
