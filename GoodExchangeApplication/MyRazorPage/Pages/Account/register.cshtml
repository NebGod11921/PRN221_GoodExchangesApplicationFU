@page "/Account/register"
@model MyRazorPage.Pages.Account.registerModel
@* import mvc.taghelpers *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "REGISTER";
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/auth/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <div class="wrapper">
        <div class="container-fluid main">
            <div class="row min-vh-100 content-layout-register">
                <!-- Image -->
                <div class="col-md-6 d-flex align-items-center justify-content-center side-image">
                    <img src="~/images/side_image.jpg" alt="" />
                    <div class="text">
                        <p>Join the community of FU Students <i>- Goodies</i></p>
                    </div>
                </div>
                <!-- Registration Form -->
                <div class="col-md-6 d-flex align-items-center justify-content-center ">
                    <div class="input-box">
                        <h1 class="text-center">Register</h1>
                        <form asp-page-handler="Register" method="post" class="my-4">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="input-field">
                                <label class="control-label">FullName</label>
                                <br />
                                <input class="input" type="text" name="txtUserName"  required />
                                <span  class="text-danger"></span>
                            </div>
                            <div class="input-field">
                                <label class="control-label">Email</label>
                                <br />
                                <input class="input" type="email" name="txtEmail" required />
                                <span class="text-danger"></span>
                            </div>
                            <div class="input-field">
                                <label class="control-label">Password</label>
                                <br />
                                <input class="input" type="password" name="txtPassword" required />
                                <span  class="text-danger"></span>
                            </div>
                            <div class="input-field">
                                <label class="control-label">Telephone</label>
                                <br />
                                <input class="input" type="tel" name="txtTelephone"  required />
                                <span  class="text-danger"></span>
                            </div>
                            <div class="input-field">
                                <label class="control-label">Address</label>
                                <br />
                                <input class="input" type="text" name="txtAddress"  required />
                                <span  class="text-danger"></span>
                            </div>
                            <div class="form-group text-danger">
                                @ViewData["notification"]
                            </div>
                            <div class="input-field">
                                <button type="submit" class="btn btn-primary submit" value="Sign Up">Register</button>
                            </div>
                        </form>
                        <div class="signin">
                            <p>Already have an account? <a asp-page="Account/login">Login here</a></p>
                        </div>
                        <div class="signin">
                            <p>Are you an admin? <a asp-page="./LoginAdmin">Login admin here</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
