            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@post.Title</h5>
                    <p class="card-text">@post.Description</p>
                    <p class="card-text"><small class="text-muted">Posted on @post.CreatedDate?.ToString("MMMM dd, yyyy")</small></p>
                    <p class="card-text"><small class="text-muted">By: @post.UserId</small></p>
                    <a class="btn btn-secondary btn-sm" asp-page="./PostDetail" asp-route-id="@post.Id">More</a>
